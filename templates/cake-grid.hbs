

{{#each this}}

    <section id="card--{{@index}}"
             class="card-wrapper"
             style="border: 2px solid {{color}}">

        <h3> # {{incrementer @index}} Cake </h3>
        <h4> {{flavor}} {{kind}}</h4>
        <div class="cake-price">{{price}}</div>
        <div class="card-img"
             style="background-image: url({{image}})"></div>
        {{#if purchased}}
            <span class="cake-soldout"></span>
        {{/if}}


    </section>

{{/each}}

